@{
    ViewData["Title"] = "Criador de Personagem";
}

<section class="av-hero">
    <span class="av-hero__eyebrow">Identidade</span>
    <h1 class="av-hero__title">Forja de Personagens</h1>
    <p class="av-hero__subtitle">
        Esboce seu guardião com opções inspiradas nas tribos de Turan, nos magos de Lumim ou nos cavaleiros de
        Yorgard. Preview rápido de trajes e marcas de linhagem.
    </p>
    <a class="av-cta" asp-controller="Portal" asp-action="Download">Baixar o criador offline</a>
</section>

<section class="av-section">
    <h2 class="av-section-heading">Recursos disponíveis</h2>
    <div class="av-grid av-grid--three">
        <article class="av-card">
            <h3 class="av-card__title">Traços Faciais</h3>
            <p class="av-card__body">Combine tatuagens luminares, cicatrizes rúnicas e ornamentos tribais.</p>
        </article>
        <article class="av-card">
            <h3 class="av-card__title">Posturas e Animações</h3>
            <p class="av-card__body">Visualize poses heroicas, provocar inimigos ou meditar sob a Árvore.</p>
        </article>
        <article class="av-card">
            <h3 class="av-card__title">Companheiros</h3>
            <p class="av-card__body">Escolha mascotes espirituais com bônus exclusivos para sua build.</p>
        </article>
    </div>
</section>
