@{
    ViewData["Title"] = "Wiki";
}

<section class="av-hero">
    <span class="av-hero__eyebrow">Conhecimento</span>
    <h1 class="av-hero__title">Wiki dos Guardiões</h1>
    <p class="av-hero__subtitle">
        Consulte a crônica completa do mundo de Al Varin. De linhagens ancestrais à cartografia das cidades,
        tudo é mantido por escribas escolhidos pela Árvore da Vida.
    </p>
    <a class="av-cta" asp-controller="Descubra" asp-action="Historia">Ler a linha do tempo</a>
</section>

<section class="av-section">
    <h2 class="av-section-heading">Compêndios principais</h2>
    <div class="av-grid av-grid--two">
        <article class="av-card">
            <h3 class="av-card__title">Bestiário do Vazio</h3>
            <p class="av-card__body">Descrição de criaturas corrompidas, fraquezas elementais e recompensas únicas.</p>
        </article>
        <article class="av-card">
            <h3 class="av-card__title">Atlas das Cidades</h3>
            <p class="av-card__body">Mapas interativos das capitais Yorgard, Caelum, Lumim e Turan.</p>
        </article>
    </div>
</section>
